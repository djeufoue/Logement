@model IEnumerable<Logement.ViewModels.CityViewModel>

@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<style>
    .content-header {
        margin: 0;
        font-size: 30px;
    }

    #carrousel{
        width:100%;
        height:100%;
        position:relative;
        overflow: hidden;
    }

    #container{
        width: 100%;
        height: 510px;
    }

    .swiper-button-prev{
        position: absolute;
        width: 50px;
        cursor: pointer;
        top: 210px;
    }

    .swiper-button-prev{
        position: absolute;
        width: 50px;
        cursor: pointer;
        top: 210px;
    }
    #g{
        left:0;
        transform: rotate(0deg);
    }
    #d{
        right: 0;
        transform: rotate(180deg);
    }

    .swiper-slide img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>
<section class="content-header">
    <div id="carrousel" class="swiper-container">
        <div id="container" class="swiper-wrapper">
            @foreach (var item in Model)
            {
               <div class="swiper-slide"><img src="data:@item.ContentType;base64,@Convert.ToBase64String(item.Data)" /></div>
            }
        </div>
        <img src="~/img/left-arrow.png" class="swiper-button-next" id="d" />
        <img src="~/img/left-arrow.png" class="swiper-button-prev" id="g" />
    </div>
</section>
<section class="content-body">
    <p> Will content all the images of different Cities with a small description mof them</p>
</section>

<script>
    var swiper = new Swiper('.swiper-container', {
        autoplay: {
            delay: 5000, // Delay between slide transitions in milliseconds
            disableOnInteraction: false, // Allow autoplay to continue even if the user interacts with the slideshow
        },
        navigation: {
            nextEl: '.swiper-button-next', // Add a button to navigate to the next slide
            prevEl: '.swiper-button-prev', // Add a button to navigate to the previous slide
        },
    });
</script>