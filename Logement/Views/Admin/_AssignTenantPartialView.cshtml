@model Logement.ViewModels.BaseAllUsersViewModel

<div class="modal fade" id="addTenant" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignUserLable">Assign new tenant to this apartment</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("First Name")
                            </th>
                            <th>
                                @Html.DisplayName("Last Name")
                            </th>
                            <th>
                                @Html.DisplayName("Email")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    <a asp-action="AddAsTenant" class="button" asp-route-tenantId="@item.Id" asp-route-email="@item.Email" asp-route-ChoosenApartmentId="@Model.ApartmentId">Choose</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

    <script src="/js/site.js"></script>

    <style>
    .modal-content{
        width: 750px;
        margin: auto;
        position: absolute;
        width: 100%;
    }
        .button {
            display: grid;
            height: 35px;
            width: 80px;
            background-color: darkslategrey;
            margin: auto;           
            place-items: center;
            font-family: "Poppins", sans-serif;
            color: #ffffff;
            font-weight: 500;
            text-decoration: none;
            border-radius: 10px;
        }

            .button:hover {
                background-color: #002ead;
                transition: 0.7s;
            }
    </style>

