@model Logement.ViewModels.BaseAllUsersViewModel

<div class="modal fade" id="addTenant" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignUserLable">Assign new tenant to this apartment</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"> 
                   <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("FirstName")
                            </th>
                            <th>
                                @Html.DisplayName("LastName")
                            </th>
                            <th>
                                @Html.DisplayName("Email")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    <a asp-action="AddAsTenant" asp-route-tenantId="@item.Id" asp-route-email="@item.Email" asp-route-ChoosenApartmentId ="@Model.ApartmentId">Add As Tenant</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>     
    </div>
</div>

<script src="/js/site.js"></script>
