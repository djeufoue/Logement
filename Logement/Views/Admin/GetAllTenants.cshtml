@model IEnumerable<Logement.ViewModels.TenantRentApartmentViewModel>

@{
    ViewData["Title"] = "GetAllTenants";
}

<h1>GetAllTenants</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenantEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepositePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountPaidByTenant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfMonthsToPay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountRemainingForRent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountPaidInAdvance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartOfContract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndOfContract)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenantEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contract)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepositePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountPaidByTenant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfMonthsToPay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountRemainingForRent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountPaidInAdvance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartOfContract)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndOfContract)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
